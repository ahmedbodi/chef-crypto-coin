description <%= @executable_name %>

start on runlevel [2345]
stop on runlevel [016]

setuid <%= @user %>
setgid <%= @group %>

<% if @respawn_times and @respawn_seconds %>
respawn
respawn limit <%= @respawn_times %> <%= @respawn_seconds  %> # <%= @respawn_times %> times in <%= @respawn_seconds  %> seconds
<% end %>

exec <%= @executable_path %> -datadir=<%= @data_dir %> -conf=<%= @conf_path %>
